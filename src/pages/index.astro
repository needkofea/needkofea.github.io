<style>
    @keyframes scrollBackground {
        0% {
            background-position: 0% 0%;
        }
        90% {
            background-position: 100% 0%;
        }
        100% {
            background-position: 100% 0%;
        }
    }

    .asciiart {
        background: linear-gradient(
            -45deg,
            rgba(255, 255, 255, 1) 20%,
            rgba(160, 0, 255, 1) 30%,
            rgba(0, 212, 255, 1) 38%,
            rgba(36, 228, 195, 1) 46%,
            rgba(94, 255, 97, 1) 54%,
            rgba(247, 255, 0, 1) 62%,
            rgba(255, 0, 0, 1) 72%,
            rgba(255, 255, 255, 1) 80%
        );
        background-size: 1000% 100%;
        font-weight: 600;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        animation: scrollBackground 5s linear infinite; /* Adjust duration as needed */
    }

    #landing-banner {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    #socials {
        display: flex;
    }

    #socials > a {
        font-size: 0.8rem;
        font-family: monospace;
    }

    #socials > a:not(:last-child)::after {
        content: "·";
        margin: 0.5rem;
    }
</style>
